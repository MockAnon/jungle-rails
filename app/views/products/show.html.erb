<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>






    <div class="reviews">
      <%= render @product.reviews.reverse %>


    </div>

    <% if current_user %>

<%= form_for [@product, Review.new] do |f| %>

  Rating: <%= f.collection_select :rating, 1..5, :to_s, :to_s %>
  Comment: <%= f.text_area :description %>

  <%= f.submit "Submit" %>
  <% end %>

  <% else %>

  <p> please log in </p>




<% end %>






  </article>

</section>
