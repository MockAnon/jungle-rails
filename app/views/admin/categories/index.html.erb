<section class="categories-index">



  <header class="page-header">
    <h1>
      <%= @categories.name %>
    </h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
    <%= link_to 'All Products', [:admin, :products], class: 'btn btn-info' %>
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
  </div>

  <div class="categories">
    <%= render @categories %>
  </div>

</section>
